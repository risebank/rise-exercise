{
  "name": "rise-exercise",
  "version": "1.0.0",
  "description": "Transaction classification exercise for potential employees",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "esbuild src/index.ts --bundle --platform=node --format=esm --outfile=dist/index.js --external:commander --external:dotenv",
    "dev": "esbuild src/index.ts --bundle --platform=node --format=esm --outfile=dist/index.js --external:commander --external:dotenv --watch",
    "dev:test": "esbuild src/index.ts --bundle --platform=node --format=esm --outfile=dist/index.js --external:commander --external:dotenv --watch",
    "dev:full": "concurrently \"npm run dev\" \"npm run test:watch\"",
    "test": "jest",
    "test:watch": "jest --watchAll",
    "start": "node dist/index.js"
  },
  "keywords": [
    "transaction",
    "classification",
    "exercise"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^29.5.8",
    "@types/node": "^20.8.10",
    "concurrently": "^9.2.0",
    "esbuild": "^0.19.5",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.60.0",
    "commander": "^11.1.0",
    "dotenv": "^16.3.1"
  }
}
